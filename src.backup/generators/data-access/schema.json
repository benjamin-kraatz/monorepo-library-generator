{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxDataAccessGeneratorSchema",
  "description": "Data Access Library Generator Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Domain name for the data-access library (e.g., 'product', 'seller')",
      "pattern": "^[a-z0-9]([a-z0-9]*(-[a-z0-9]+)*)?$",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "Directory where the library will be created",
      "default": "libs/data-access"
    },
    "description": {
      "type": "string",
      "description": "Description of the data-access library"
    },
    "skipTests": {
      "type": "boolean",
      "description": "Skip generating test files",
      "default": false
    }
  },
  "required": ["name"],
  "examplesFile": "../../../docs/generator-examples/data-access-examples.md"
}
